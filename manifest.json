{
  "manifest_version": 3,
  "name": "Coinos Wallet Embedder",
  "version": "1.2",
  "description": "Embed Coinos.io wallet in your browser.",
  "permissions": ["activeTab", "storage"],
  "icons": {
    "16": "https://coinos.io/favicon.svg",
    "48": "https://coinos.io/favicon.svg",
    "128": "https://coinos.io/favicon.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "https://coinos.io/favicon.svg"
    }
  },
  "options_page": "settings.html", // Add this line
  "action": {
    "default_icon": {
      "48": "https://coinos.io/favicon.svg"
    },
    "default_popup": "popup.html",
    "badge": {
      "color": [0, 128, 0, 255], // Green color
      "text": ""
    },
    "background": {
      "service_worker": "background.js"
    }
  }
}
